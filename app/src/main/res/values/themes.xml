<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Like" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">@color/baseColor</item>
        <item name="android:windowBackground">@color/baseColor</item>
        <item name="android:textColorPrimary">@color/thirdColor</item>
        <item name="android:textColor">@color/thirdColor</item>
    </style>

    <style name="Theme.Splash" parent="Theme.Like">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
</resources>