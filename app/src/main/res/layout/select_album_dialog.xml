<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="model"
            type="com.like.selectAlbumDialog.SelectAlbumDialogModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".selectAlbumDialog.SelectAlbumDialog">

        <ListView
            android:id="@+id/selectAlbumList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="@{ model.choiceMode }"
            android:adapter="@{ model.adapter }"/>
    </FrameLayout>
</layout>