<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/audioPlayContent"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="2dp"
    android:background="@drawable/border"
    android:padding="2dp">

    <LinearLayout
        android:id="@+id/imageLayout"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="2dp">

        <LinearLayout
            android:id="@+id/emptyAlbumPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/emptyAlbumPhotoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@string/emptyAlbumPhoto"
                android:textAlignment="center"
                app:autoSizeMaxTextSize="16sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeTextType="uniform" />
        </LinearLayout>

        <ImageView
            android:id="@+id/audioImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:srcCompat="@tools:sample/avatars"
            tools:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/audioPlayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:padding="3dp"
            android:singleLine="true"
            android:text="Name"
            android:textAlignment="textStart"
            tools:layout_editor_absoluteX="62dp"
            tools:layout_editor_absoluteY="14dp" />

        <TextView
            android:id="@+id/audioArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Artist" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/audioMenu"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:src="@drawable/menu"
        tools:layout_editor_absoluteX="357dp"
        tools:layout_editor_absoluteY="2dp" />

</LinearLayout>