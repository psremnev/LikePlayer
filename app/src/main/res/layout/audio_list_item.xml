<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="itemData"
            type="com.like.dataClass.Audio" />
        <variable
            name="listeners"
            type="com.like.AudioListeners" />
        <variable
            name="isMark"
            type="Boolean" />
        <import type="com.like.Constants"/>
        <import type="android.view.View"/>
    </data>
    <LinearLayout
        android:id="@+id/audioPlayContent"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="2dp"
        android:background="@drawable/border"
        android:padding="2dp"
        android:onClick="@{ listeners::onAudioClick }">

        <LinearLayout
            android:id="@+id/imageLayout"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="2dp">

            <LinearLayout
                android:id="@+id/audioMarker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{ isMark ? View.VISIBLE : View.GONE }"
                android:background="@drawable/audio_marker"
                android:orientation="vertical"
                android:rotationX="4">

            </LinearLayout>

            <ImageView
                android:id="@+id/audioImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                tools:srcCompat="@tools:sample/avatars"
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/emptyAlbumPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="gone">

                <TextView
                    android:id="@+id/emptyAlbumPhotoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="@string/emptyAlbumPhoto"
                    android:textAlignment="center"
                    android:textColor="@color/secondColor"
                    app:autoSizeMaxTextSize="16sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeTextType="uniform" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/audioPlayName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:padding="3dp"
                android:singleLine="true"
                android:text="@{ itemData.name }"
                android:textAlignment="textStart"
                android:textColor="@color/secondColor"
                tools:layout_editor_absoluteX="62dp"
                tools:layout_editor_absoluteY="14dp" />

            <TextView
                android:id="@+id/audioArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="@{ itemData.artist != Constants.unknownArtist ? itemData.artist : Constants.emptyString }"
                android:textColor="@color/secondColor" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/audioMenu"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:src="@drawable/menu"
            tools:layout_editor_absoluteX="357dp"
            tools:layout_editor_absoluteY="2dp"
            android:onClick="@{ listeners::onAudioMenuClick }"/>

    </LinearLayout>
</layout>